@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCKontorExpert</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVCKontorExpert.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body>
    @Html.Partial("_InfoPartial")
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logoImage/kontorExpertLogo.PNG" alt="MVCKontorExpert Logo" style="height:40px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <!-- Administration Dropdown Menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="administrationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Administration
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="administrationDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Index">Product Management</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Category" asp-action="CategoryManagement">Category Management</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="ParentCategory" asp-action="ParentCategoryManagement">Parent Category Management</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex mx-auto" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">REGISTER</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">LOGIN</a>
                                </li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ForgotPassword">Glemt kodeord</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                        </li>
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <partial name="_LoginPartial" />
                    }
                </div>
            </div>
        </nav>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <!-- Dropdown for Used Products -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="usedProductsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Used Products
                        </a>
                        <ul id="usedProductsDropdownList" class="dropdown-menu" aria-labelledby="usedProductsDropdown">
                            @foreach (var usedProduct in ViewBag.UsedProducts ?? new List<Product>())
                            {
                                <li><a class="dropdown-item" href="#">@usedProduct.Name</a></li>
                            }
                        </ul>
                    </li>
                    <!-- Dropdown for New Products -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="newProductsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            New Products
                        </a>
                        <ul id="newProductsDropdownList" class="dropdown-menu" aria-labelledby="newProductsDropdown">
                            @foreach (var newProduct in ViewBag.NewProducts ?? new List<Product>())
                            {
                                <li><a class="dropdown-item" href="#">@newProduct.Name</a></li>
                            }
                        </ul>
                    </li>
                    <!-- Navigation for Parent Categories -->
                    @foreach (var parentCategory in ViewBag.ParentCategories ?? new List<ParentCategory>())
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="parentCategoryDropdown-@parentCategory.ParentCategoryID"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false" onmouseover="loadSubCategories(@parentCategory.ParentCategoryID)">
                                @parentCategory.ParentCategoryName
                            </a>
                            <ul id="subCategoryDropdown-@parentCategory.ParentCategoryID" class="dropdown-menu" aria-labelledby="parentCategoryDropdown-@parentCategory.ParentCategoryID">
                                <!-- Placeholder for subcategories loaded via AJAX -->
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @Html.Partial("_FooterPartial")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // JavaScript function to handle AJAX call and display subcategories
        function loadSubCategories(parentCategoryId) {
            $.ajax({
                url: '@Url.Action("GetSubCategories", "Category")',
                type: 'GET',
                data: { parentId: parentCategoryId },
                success: function (data) {
                    var dropdown = $('#subCategoryDropdown-' + parentCategoryId);
                    dropdown.empty();

                    $.each(data, function (index, subCategory) {
                        dropdown.append('<li><a class="dropdown-item" href="#">' + subCategory.categoryName + '</a></li>');
                    });

                    dropdown.parent().addClass('show');
                },
                error: function () {
                    console.log('Failed to load subcategories.');
                }
            });
        }
    </script>
</body>
</html>
