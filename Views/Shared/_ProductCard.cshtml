@model MVCKontorExpert.Models.Product

<div class="col-sm-6 col-md-4 col-lg-3 mb-3">
    <div class="card h-100 shadow-sm border-0">
        @if (Model.Images != null && Model.Images.Any())
        {
            <img src="@Model.Images.First().ImageUrl" class="card-img-top" alt="Product Image">
        }
        else
        {
            <img src="https://via.placeholder.com/200" class="card-img-top" alt="No Image Available">
        }
        <div class="card-body d-flex flex-column p-3">
            <h5 class="card-title text-truncate">@Model.Name</h5>
            <p class="card-text text-truncate">@Model.Description</p>
            <p class="card-text"><strong>Price:</strong> @String.Format("{0:C}", Model.Price)</p>
            <button type="button" class="btn btn-primary mt-auto" onclick="addToCart(@Model.ProductID)">Add to Cart</button>
        </div>
    </div>
</div>

<style>
    /* Global styles for cards */
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
        border-radius: 15px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .card img {
            height: 200px; /* Juster højden efter behov */
            width: 100%; /* Billedet fylder 100% af containerens bredde */
            object-fit: cover; /* Billedet dækker containeren uden at strække sig */
            border-top-left-radius: 15px;
            border-top-right-radius: 15px;
        }

    .card-body {
        padding: 10px;
        text-align: center;
    }

    .card-title {
        font-size: 1.25em;
        font-weight: bold;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .card-text {
        font-size: 0.9em;
        color: #777;
        margin-bottom: 0.5rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.2s, transform 0.2s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        .btn-primary:active {
            background-color: #004085;
        }

</style>
